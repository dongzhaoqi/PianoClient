<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pianostudy"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.piano.view.CustomApplcation"
        android:allowBackup="true"
        android:icon="@drawable/piano"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.pianostudy.ui.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pianostudy.ui.ButtonActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.pianostudy.ui.PitchActivity" />
        <activity android:name="com.pianostudy.ui.AnalysysActivity" />
        <activity android:name="com.pianostudy.ui.PitchPortraitButtonActivity" />
        <activity android:name="com.pianostudy.ui.AnalysysPortraitButtonActivity" />
        <activity android:name="com.pianostudy.ui.HomeActivity" />
        <activity android:name="com.pianostudy.ui.AboutActivity" />
        <activity android:name="com.pianostudy.ui.LoginActivity" />
        <activity android:name="com.pianostudy.ui.UserStatisticsActivity" />
        <activity android:name="com.pianostudy.ui.AuthorizeActivity" />
        <activity android:name="com.pianostudy.ui.UserInfoActivity" />
        <activity android:name="com.pianostudy.ui.MyScoreActivity" />
        
        
    </application>

</manifest>